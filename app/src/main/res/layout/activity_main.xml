<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="557dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="274dp"
        android:layout_marginRight="274dp"
         android:layout_alignParentRight="true"
        android:layout_marginTop="56dp"
        android:max="100"
        android:progress="0"
        android:visibility="visible"
        tools:visibility="visible"></ProgressBar>

    <TextView
        android:id="@+id/main_meeting"
        android:layout_width="wrap_content"
        android:layout_height="113dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/back" />

    <TextView
        android:id="@+id/eTime"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/startTime"
        android:layout_alignStart="@+id/organizer"

        android:layout_alignLeft="@+id/organizer"
        android:layout_marginStart="-356dp"
        android:layout_marginLeft="-356dp"
        android:layout_marginTop="7dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:visibility="visible"
        app:fontFamily="Times New Roman" />

    <TextView
        android:id="@+id/startTime"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/organizer"
        android:layout_alignStart="@+id/organizer"


        android:layout_alignLeft="@+id/organizer"
        android:layout_marginStart="-355dp"
        android:layout_marginLeft="-355dp"
        android:layout_marginTop="-50dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:visibility="visible"
        app:fontFamily="Times New Roman" />

    <TextView
        android:id="@+id/organizer"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        android:layout_alignParentTop="true"
        android:layout_marginStart="419dp"
        android:layout_marginLeft="419dp"

        android:layout_marginTop="96dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:visibility="visible"
        app:fontFamily="Times New Roman" />

    <ListView
        android:id="@+id/list_view"
        android:layout_width="727dp"
        android:layout_height="862dp"
        android:layout_below="@+id/main_meeting"
        android:layout_alignStart="@+id/main_meeting"
        android:layout_alignLeft="@+id/main_meeting"
        android:layout_marginStart="-5dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="7dp" />


    <TextView
        android:id="@+id/text_view_date"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="59dp"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="59dp"
        android:layout_marginRight="59dp"
        android:gravity="center"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/main_meeting"
        android:layout_alignLeft="@+id/main_meeting"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:onClick="backDay"
        android:text="Back" />

    <Button
        android:id="@+id/right_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/list_view"
        android:layout_alignRight="@+id/list_view"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:onClick="nextDay"
        android:text="Next" />

    <TextView
        android:id="@+id/subject"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/organizer"
        android:layout_alignLeft="@+id/organizer"

        android:layout_alignBottom="@+id/eTime"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="-1dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />


</RelativeLayout>